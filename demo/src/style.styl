*
  margin: 0
  padding: 0
  -webkit-box-sizing: border-box
  box-sizing: border-box


body
  font-family: sans-serif
  padding: 2em


.header
  line-height: 1.4
  margin-bottom: 2em


.container
  max-width: 640px
  margin: 0 auto


.text-center
  text-align: center


.block
  margin-bottom: 2em


.row
  margin-bottom: 1em


.button
  background-color: rgba(255, 255, 255, 0)
  padding: 0.5em
  border: 1px solid #eee
  cursor: pointer
  outline: 0


.button:hover
  border-color: #ccc


.title
  margin-bottom: 1em


pre
  white-space: pre-wrap


.code
  background-color: #eee
  text-align: left
  padding: 1em
  border-radius: 5px


.code span
  color: #999


/* INumber */

.inumber
  box-sizing: border-box
  display: inline-flex

  &-button
    box-sizing: border-box
    display: block
    background-color: rgba(255,255,255,0)
    border: 0
    padding: 0
    cursor: pointer
    outline: none

  &-input
    box-sizing: border-box
    display: block
    border: 0
    padding: 0
    margin: 0
    outline: none

    &[type=number]
      appearance: textfield


    &[type=number]::-webkit-inner-spin-button
      appearance: none

    &[type=number]::-webkit-outer-spin-button
      appearance: none


.inumber
  &-button
    width: 30px
    height: 30px
    border: 1px solid #eee


    &:hover
      border-color: #ccc


  &-input
    width: 50px
    height: 30px
    border-top: 1px solid #eee
    border-bottom: 1px solid #eee
    text-align: center
